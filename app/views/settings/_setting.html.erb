<tr class="node">
  <td class="layout">
    <%="<div class='nest-padding'></div>\n" * @depth%>
    <%if setting%>
      <span class="title">
        <%=link_to "#{image_tag('setting.png', :size => '16x16')} #{key.humanize}", edit_setting_path(setting), :title => setting.key%>
      </span>
    <%else%>
      <span class="title">
        <label><%=key.humanize%></label>
      </span>
    <%end%>
  </td>
  <td>
    <%=setting.protected_value if setting%>
  </td>
  <%
  if hash
    @depth += 1
    hash.each do |key, value|%>
    <%= render_node(key, value)%>
   <%end
   @depth -= 1
   if @depth == 0%>
<tr class=spacer>
  <td colspan = 2 ></td>
</tr>
  <%end%>
<%end%>
</tr>
